@import 'jeet'
@font-face
    font-family RobotoBlack
    font-style normal
    src url(../fonts/Roboto-Black.ttf)
@font-face
    font-family RobotoBold
    font-style normal
    src url(../fonts/Roboto-Bold.ttf)
@font-face
    font-family RobotoMedium
    font-style normal
    src url(../fonts/Roboto-Medium.ttf)
@font-face
    font-family RobotoLight
    font-style normal
    src url(../fonts/Roboto-Light.ttf)
@font-face
    font-family RobotoThin
    font-style normal
    src url(../fonts/Roboto-Thin.ttf)
*,
*:after,
*:before
    margin 0
    padding 0
    box-sizing border-box
$mobile = "only screen and (max-width: 600px)"
$tablet = "only screen and (min-width: 601px) and (max-width: 800px)"
$desktop = "only screen and (min-width: 801px)"

$color-red = #f3270a
$color-red-dark = #C21F08
$color-withe = #e9e9e9
$color-black = #000000

body
    margin 0
    font-family RobotoMedium
    font-size 18px
    color $color-withe
h2
    padding-right: 60px
    padding-left: 20px
    font-size: 31px
    margin-bottom: 31px
    &:before
        display: inline-block
        margin-left: -20px
        width: 6px
        background: $color-red-dark
        height 74px
        content: ""
        position: absolute;
h3
    font-family RobotoThin
    text-transform: uppercase
    font-size: 20px
    padding-left: 18px
    margin-bottom: 5px
    &:before
        display: inline-block
        margin-left: -18px
        width: 6px
        background: $color-red-dark
        height 44px
        content: ""
        position: absolute;
h4  
    font-family RobotoThin
    font-size: 12px
    margin-left: 18px  
address
    font-family RobotoLight
    font-size: 14px
    margin-left: 18px 
    margin-bottom: 18px
p
    font-size: 14px
    margin-bottom: 14px
.wrapper
    center(1201px, 32px)

.title-style-1 
    font-size: 70px
    color: $color-red
    text-align: right
    margin-top: -150px;
    @media $mobile
        font-size: 40px
.three-col
    col(1/3)
    margin-bottom 20px
    @media $mobile
        col(12/12)
.row
    margin-bottom: 20px
    margin-top: 10px
    display: flex
    
