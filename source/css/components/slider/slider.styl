.slider
    position relative
    width 100%
    height 430px
    overflow hidden

    .slider__track
        position relative
        width 100%
        height 100%
        margin-left 0
        font-size 0
        transition all 250ms ease

    .slider__dots
        position absolute
        left 50%
        bottom 0
        transform translate(-50%, 0)
        z-index 11

        li
            display inline-block
            width 10px
            height 10px
            margin 0 5px
            background-color $light_gray
            border-radius 50%
            cursor pointer

            &.active
                background-color $orange
    
    .slider__nav
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index 10
    
    .slider__nav-prev
        position absolute
        top 50%
        left 0
        transform translate(0, -50%)

        svg
            fill $white
    
    .slider__nav-next
        position absolute
        top 50%
        right 0
        transform translate(0, -50%)

        svg
            fill $white